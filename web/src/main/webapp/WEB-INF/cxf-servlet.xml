<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xmlns:cxf="http://cxf.apache.org/core"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
            http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
            http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd">

    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>

    <bean id="jsonProvider" class="org.codehaus.jackson.jaxrs.JacksonJsonProvider"/>
    <bean id="ipAddressInInterceptor" class="com.ammob.passport.webapp.interceptor.IpAddressInInterceptor">
        <property name="allowedList">
            <list>
                <value>192.168</value>
                <value>120.33.33</value>
                <value>10.10</value>
                <value>127.0</value>
                <value>218.66.36.119</value>
                <value>218.85.73.40</value>
            </list>
        </property>
    </bean>

    <jaxws:endpoint id="userService" implementor="#userManager" address="/UserService"/>
    <!-- Add new endpoints for additional services you'd like to expose -->
    
    <jaxrs:server address="/api">
        <jaxrs:inInterceptors>
            <ref bean="ipAddressInInterceptor" />
        </jaxrs:inInterceptors>
        <jaxrs:features>
            <cxf:logging/>
        </jaxrs:features>
        <jaxrs:serviceBeans>
            <ref bean="userManager"/>
            <ref bean="grantManager"/>
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <ref bean="jsonProvider"/>
        </jaxrs:providers>
        <jaxrs:extensionMappings>
            <entry key="html" value="text/html"/>
            <entry key="json" value="application/json"/>
            <entry key="xml" value="application/xml"/>
            <entry key="feed" value="application/atom+xml"/>
        </jaxrs:extensionMappings>
    </jaxrs:server>
</beans>